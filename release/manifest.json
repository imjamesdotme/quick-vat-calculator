{
  "manifest_version": 3,

  "name": "Quick VAT Calculator",
  "short_name": "Quick VAT",
  "description": "Quickly calculate VAT without leaving Chrome.",
  "version": "1.3",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "action": {
    "default_icon": {
      "19": "icon19x19.png",
      "38": "icon76x76.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"]
}
